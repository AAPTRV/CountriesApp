<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/purple_700">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_rounded"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/cardIcon"
                android:layout_width="@dimen/row_layout_icon_size"
                android:layout_height="@dimen/row_layout_icon_size"
                android:layout_marginStart="@dimen/common_margin"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginBottom="@dimen/common_margin"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon"
                android:contentDescription="@string/icon_content_description" />

            <TextView
                android:id="@+id/text_name_title"
                android:layout_width="@dimen/zero_size"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_margin"
                android:layout_marginTop="@dimen/common_margin"
                android:text="@string/text_title"
                android:textSize="@dimen/common_text_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_margin"
                android:layout_marginTop="@dimen/common_margin"
                android:text="@string/text_title"
                android:textSize="@dimen/common_text_medium"
                app:layout_constraintStart_toEndOf="@+id/cardIcon"
                app:layout_constraintTop_toBottomOf="@id/text_name_title" />

            <TextView
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_margin"
                android:layout_marginTop="@dimen/common_margin"
                android:text="@string/text_description"
                android:textSize="@dimen/common_text_medium"
                app:layout_constraintStart_toEndOf="@+id/cardIcon"
                app:layout_constraintTop_toBottomOf="@+id/text_title" />


            <TextView
                android:id="@+id/text_languages"
                android:layout_width="@dimen/zero_size"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_margin"
                android:layout_marginTop="@dimen/common_margin"
                android:text="@string/text_languages"
                android:textSize="@dimen/common_text_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardIcon"
                app:layout_constraintTop_toBottomOf="@+id/text_description" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>